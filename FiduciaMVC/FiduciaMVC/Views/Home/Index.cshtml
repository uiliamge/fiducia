                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-md-8 col-sm-8 scrollpoint sp-effect1">
                                @using (Html.BeginForm("Email", "Home", FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Nome, new { @class = "form-control", @placeholder = "Seu nome", @required = true })
                                        @Html.ValidationMessageFor(x => x.Nome)
                                    </div>
                                    <div class="form-group">
                                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Seu e-mail", @required = true, @onblur = "validacaoEmail(this)" })
                                        <p id="msgemail"></p>
                                        @Html.ValidationMessageFor(x => x.Email)
                                    </div>
                                    <div class="form-group">
                                        @Html.TextAreaFor(x => x.Mensagem, new { @cols = "30", @rows = "8", @class = "form-control", @placeholder = "Sua mensagem", @required = true })
                                        @Html.ValidationMessageFor(x => x.Mensagem)
                                    </div>
                                    <button id="btnSubmit" type="submit" class="disabled btn btn-primary btn-lg">Enviar</button>
                                }
                            </div>
                            <div class="col-md-4 col-sm-4 contact-details scrollpoint sp-effect2">
